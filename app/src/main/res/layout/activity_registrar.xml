<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical"
    tools:context=".RegistrarActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="207dp"
                android:layout_height="132dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/logo"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="#2196F3"
                android:gravity="center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="@string/textView14"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                android:textStyle="bold|italic"
                tools:ignore="TextSizeCheck" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:background="#6D88D8"
                android:gravity="center"
                android:text="@string/textView15"
                android:textSize="20dp"
                android:textStyle="bold|italic" />

            <EditText
                android:id="@+id/edtRegNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:minHeight="35dp"
                android:text="@string/edtRegNombre"

                android:textSize="20dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="#6D88D8"
                android:gravity="center"
                android:text="@string/textView16"
                android:textSize="20dp"
                android:textStyle="bold|italic" />

            <EditText
                android:id="@+id/edtRegTelefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:inputType="phone"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:text="@string/edtRegTelefono"

                android:textSize="20dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="#6D88D8"
                android:gravity="center"
                android:text="@string/textView17"
                android:textSize="20dp"
                android:textStyle="bold|italic" />

            <EditText
                android:id="@+id/edtRegEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:text="@string/edtRegEmail"

                android:textSize="20dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="#6D88D8"
                android:gravity="center"
                android:text="@string/textView18"
                android:textSize="20dp"
                android:textStyle="bold|italic" />

            <EditText
                android:id="@+id/edtRegPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:inputType="textPassword"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:text="Contraseña"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="#6D88D8"
                android:gravity="center"
                android:text="@string/textView19"
                android:textSize="20dp"
                android:textStyle="bold|italic" />

            <EditText
                android:id="@+id/edtRegConfPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:inputType="textPassword"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:text="Confirmar Contraseña"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btnRegConfirmar"
                android:layout_width="306dp"
                android:layout_height="50dp"
                android:layout_marginStart="45sp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:text="@string/btnRegConfirmar"
                android:textSize="20sp"
                android:textStyle="bold|italic"
                app:cornerRadius="25dp"
                tools:ignore="TouchTargetSizeCheck,TextSizeCheck" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>